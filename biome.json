{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!node_modules",
			"!.next",
			"!dist",
			"!build"
		]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"formatter": {
		"enabled": false
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"react": "recommended"
		},
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": "off"
			},
			"correctness": {
				"noUnknownFunction": "off",
				"noUnknownProperty": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}